div(id="timer-modal" class="modal bottom-sheet")
    div(class="modal-content center-align")
        h1(id="tutor-timer") 00:00:00

        div.row
            div(class="col s4 right-align")
                a(id="start-btn" class="btn green")
                    i.material-icons play_arrow
            div(class="col s4")
                a(id="stop-btn" class="btn red modal-close")
                    i.material-icons stop
            div(class="col s4 left-align")
                a(href="#cancel-modal" id="cancel-btn" class="btn grey modal-trigger modal-close")
                    i.material-icons close

